<Application x:Class="ResearchProjectManagement_SE18220.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ResearchProjectManagement_SE18220"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="#FF6B705C"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#FFFFF8EB"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#FFB38B82"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
        </Style>
    </Application.Resources>
</Application>
