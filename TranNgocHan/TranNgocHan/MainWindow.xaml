<Window x:Class="TranNgocHan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TranNgocHan"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Height="500" 
        Width="800" 
        FontFamily="Tahoma" 
        FontSize="13"
        Background="#FFF5F5DC" 
        WindowStartupLocation="CenterScreen" >

    <Window.Resources>
        <!-- Label Style -->
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#FF6B705C"/>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="14"/>
            <Setter Property="Background" Value="#FFFFF8EB"/>
        </Style>

        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#FFB38B82"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <DataGrid x:Name="dgResearchList" AutoGenerateColumns="False" CanUserAddRows="False" SelectionChanged="dgResearchList_SelectionChanged">
                <DataGrid.Columns>

                    <DataGridTextColumn Header="ProjectId" Width="0.5*" Binding="{Binding ProjectId}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Project Title" Width="3*" Binding="{Binding ProjectTitle}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Research Field" Width="1*" Binding="{Binding ResearchField}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Start Date" Width="1*" Binding="{Binding StartDate}"></DataGridTextColumn>
                    <DataGridTextColumn Header="End Date" Width="1*" Binding="{Binding EndDate}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Lead Researcher Name" Width="1*" Binding="{Binding LeadResearcher.FullName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Budget" Width="1*" Binding="{Binding Budget}"></DataGridTextColumn>

                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <TextBox x:Name="txtSearch" Width="500"></TextBox>
                <Button x:Name="SearchBtn" Content="Search" Width="100" Margin="5" Click="SearchBtn_Click" ></Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button x:Name="btnAdd" Content="Create New Project" Width="150" Margin="5" Click="Add_Click"></Button>
                <Button x:Name="btnEdit" Content="Update Project" Width="150" Margin="5" Click="Edit_Click"></Button>
                <Button x:Name="btnDelete" Content="Delete Project" Width="150" Margin="5" Click="Delete_Click"></Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Project Title"></Label>
                <TextBox x:Name="txProjectTitle" Margin="5" Width="500" ></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Research Field"></Label>
                <TextBox x:Name="txResearchField" Margin="5"  Width="500" ></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">

                <Label Content="Start Date"></Label>
                <TextBox x:Name="txStartDate" Margin="5"  Width="500" ></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="End Date"></Label>
                <TextBox x:Name="txEndDate" Margin="5"  Width="500" ></TextBox>
            </StackPanel>


            <StackPanel Orientation="Horizontal">
                <Label Content="Budget"></Label>
                <TextBox x:Name="txBudget" Margin="5" Width="500"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">

                <Label Content="Lead Researcher Name"></Label>
                <ComboBox x:Name="cbLeadResearcher" Margin="5"  Width="200" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
